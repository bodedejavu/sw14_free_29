<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/btn1"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Register User 1"
        android:textSize="16sp" />
    
    <Button
        android:id="@+id/btn12"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Register User 2"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Send Location User 1"
        android:textSize="16sp" />
    
    <Button
        android:id="@+id/btn22"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Send Location User 2"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Get all Users"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Add allowed User 2 to User 1"
        android:textSize="16sp" />
    
    <Button
        android:id="@+id/btn5"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Get allowed Users for User 1"
        android:textSize="16sp" />
    
        <Button
        android:id="@+id/btn6"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Delete User 2 from User 1"
        android:textSize="16sp" />

</LinearLayout>
